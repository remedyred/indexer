{
	"name": "@remedyred/indexer",
	"version": "2.2.1",
	"description": "CLI tool for generating index files",
	"license": "UNLICENSED",
	"bin": {
		"indexer": "./bin/indexer.js"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/indexer.js src/index.ts --target=node12 --platform=node --external:shelljs",
		"build:meta": "npm run build --metafile",
		"clean": "shx rm -rf ./bin",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"start": "node bin/indexer.js",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "^1.0.44",
		"@snickbit/node-utilities": "^4.3.3",
		"@snickbit/out": "^2.0.23",
		"@snickbit/utilities": "^3.0.18",
		"fast-glob": "^3.2.11",
		"lilconfig": "^2.0.5",
		"mkdirp": "^1.0.4"
	},
	"devDependencies": {
		"@types/node": "^17.0.34",
		"esbuild": "^0.14.39",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true,
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.remedyred.com/"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs"
		]
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
