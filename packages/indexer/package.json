{
	"name": "@remedyred/indexer",
	"version": "2.0.79",
	"description": "CLI tool for generating index files",
	"license": "UNLICENSED",
	"bin": {
		"indexer": "./bin/indexer.js"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "esbuild src/index.js --bundle --outfile=bin/indexer.js --target=node12 --platform=node",
		"clean": "shx rm -rf ./bin",
		"depcheck": "depcheck",
		"prod": "npm run clean && npm run build --minify",
		"start": "node bin/indexer.js",
		"watch": "npm run build --watch"
	},
	"dependencies": {
		"@snickbit/node-cli": "^1.0.39",
		"@snickbit/node-utilities": "^4.2.31",
		"@snickbit/out": "^2.0.18",
		"@snickbit/utilities": "^3.0.15",
		"glob": "^8.0.1",
		"lilconfig": "^2.0.5",
		"mkdirp": "^1.0.4"
	},
	"devDependencies": {
		"jest": "^27.5.1",
		"shx": "^0.3.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true,
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.remedyred.com/"
	}
}
