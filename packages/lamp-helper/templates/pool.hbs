;PHP-FPM configuration for domain "{{domain}}" for user "{{username}}" created on {{date}}
[{{domain}}]
listen = /run/php/{{domain}}.sock
listen.owner = {{username}}
listen.group = {{username}}
listen.mode = 0660

user = {{username}}
group = {{username}}

pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3
pm.max_requests = 0

security.limit_extensions = .php

env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /home/{{username}}/tmp/
env[TMPDIR] = /home/{{username}}/tmp/
env[TEMP] = /home/{{username}}/tmp/

php_admin_value[upload_tmp_dir] = /home/{{username}}/tmp/
php_admin_value[post_max_size] = 500M

php_value[upload_max_filesize] = 500M
