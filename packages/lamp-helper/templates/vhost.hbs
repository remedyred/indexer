<VirtualHost *:80>
	ServerAdmin {{ admin_email }}
	ServerName {{domain}}
	ServerAlias www.{{domain}}
	DocumentRoot "/home/{{username}}/www/{{domain}}"

	<Directory />
	    AllowOverride All
	</Directory>

	<Directory /home/{{username}}/www/{{domain}}>
        allow from all
        Options ExecCGI FollowSymLinks Includes IncludesNOEXEC Indexes MultiViews SymLinksIfOwnerMatch
        AllowOverride all
        Require all granted
	</Directory>

	<FilesMatch \.php$>
      SetHandler "proxy:unix:/run/php/{{domain}}.sock|fcgi://localhost"
    </FilesMatch>

	ErrorLog /home/{{username}}/logs/{{domain}}-error.log
	LogLevel error
	CustomLog /home/{{username}}/logs/{{domain}}-access.log combined
</VirtualHost>
