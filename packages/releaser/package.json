{
	"name": "@remedyred/releaser",
	"version": "0.3.1",
	"license": "UNLICENSED",
	"main": "./bin/releaser",
	"bin": {
		"releaser": "./bin/releaser"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/releaser src/index.ts --target=node12 --platform=node --external:shelljs --sourcemap",
		"build:meta": "npm run build --metafile",
		"clean": "shx rm -rf ./dist ./bin",
		"depcheck": "depcheck",
		"prod": "pnpm run build --minify",
		"start": "node bin/releaser.js",
		"watch": "pnpm run build --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@remedyred/cli-utilities": "^0.3.1",
		"@snickbit/node-cli": "^1.0.56",
		"@snickbit/node-utilities": "^4.3.13",
		"@snickbit/out": "^2.0.33",
		"@snickbit/queue": "^1.1.10",
		"@snickbit/upwords": "^2.0.20",
		"@snickbit/utilities": "^3.0.27",
		"ansi-styles-template": "^1.0.0",
		"conventional-changelog-angular": "^5.0.13",
		"conventional-recommended-bump": "^6.1.0",
		"execa": "^6.1.0",
		"semver": "^7.3.7"
	},
	"devDependencies": {
		"@types/node": "^17.0.39",
		"esbuild": "^0.14.42",
		"shx": "^0.3.4",
		"typescript": "^4.7.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true,
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.remedyred.com/"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs"
		]
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
