{
	"name": "@remedyred/releaser",
	"version": "0.0.2",
	"license": "UNLICENSED",
	"preferGlobal": true,
	"publishConfig": {
		"registry": "https://npm.remedyred.com/",
		"access": "public"
	},
	"bin": {
		"releaser": "./bin/releaser.js"
	},
	"main": "./bin/releaser.js",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node bin/releaser.js",
		"clean": "shx rm -rf ./dist ./bin",
		"build": "esbuild --bundle --outfile=bin/releaser.js src/index.ts --target=node12 --platform=node --external:shelljs",
		"build:meta": "yarn build --metafile",
		"prod": "yarn build --minify",
		"watch": "yarn build --watch"
	},
	"dependencies": {
		"@npmcli/map-workspaces": "^2.0.3",
		"@npmcli/run-script": "^3.0.2",
		"@snickbit/node-cli": "^1.0.26",
		"@snickbit/node-utilities": "^4.2.20",
		"@snickbit/out": "^2.0.5",
		"execa": "^6.1.0",
		"release-it": "^14.14.2",
		"semver": "^7.3.7"
	},
	"devDependencies": {
		"esbuild": "^0.14.38",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs"
		]
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
