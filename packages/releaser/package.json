{
	"name": "@remedyred/releaser",
	"version": "0.0.9",
	"license": "UNLICENSED",
	"preferGlobal": true,
	"publishConfig": {
		"registry": "https://npm.remedyred.com/",
		"access": "public"
	},
	"bin": {
		"releaser": "./bin/releaser.js"
	},
	"main": "./bin/releaser.js",
	"files": [
		"dist"
	],
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"start": "node bin/releaser.js",
		"clean": "shx rm -rf ./dist ./bin",
		"build": "esbuild --bundle --outfile=bin/releaser.js src/index.ts --target=node12 --platform=node --external:shelljs --sourcemap",
		"build:meta": "npm run build --metafile",
		"depcheck": "depcheck",
		"prod": "npm run build -- --minify",
		"watch": "npm run build -- --watch"
	},
	"dependencies": {
		"@hapi/topo": "^5.1.0",
		"@snickbit/cycle": "^0.0.17",
		"@snickbit/node-cli": "^1.0.39",
		"@snickbit/node-utilities": "^4.3.2",
		"@snickbit/out": "^2.0.18",
		"@snickbit/queue": "^1.0.0",
		"@snickbit/upwords": "^2.0.13",
		"@snickbit/utilities": "^3.0.15",
		"ansi-styles-template": "^1.0.0",
		"execa": "^6.1.0",
		"lilconfig": "^2.0.5",
		"log-update": "^5.0.1",
		"semver": "^7.3.7",
		"workspace-tools": "^0.19.0"
	},
	"devDependencies": {
		"@types/node": "^17.0.31",
		"esbuild": "^0.14.38",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs"
		]
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
