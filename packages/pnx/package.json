{
	"name": "@remedyred/pnx",
	"version": "0.0.3",
	"private": true,
	"license": "UNLICENSED",
	"main": "./bin/pnx",
	"bin": {
		"pnx": "./bin/pnx"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/pnx src/index.ts --target=node12 --platform=node --external:shelljs --sourcemap",
		"build:meta": "npm run build --metafile",
		"clean": "shx rm -rf ./dist ./bin",
		"depcheck": "depcheck",
		"prod": "pnpm run build --minify",
		"start": "node bin/releaser.js",
		"watch": "pnpm run build --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "^1.0.49",
		"@snickbit/out": "^2.0.26"
	},
	"devDependencies": {
		"@types/node": "^17.0.34",
		"esbuild": "^0.14.39",
		"shx": "^0.3.4",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true,
	"publishConfig": {
		"access": "public",
		"registry": "https://npm.remedyred.com/"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs"
		]
	},
	"typedoc": {
		"entryPoints": [
			"src/index.ts"
		],
		"out": "docs",
		"githubPages": false,
		"hideBreadcrumbs": true,
		"hideGenerator": true,
		"excludeProtected": true,
		"excludeInternal": true,
		"excludePrivate": true,
		"disableSources": true,
		"defaultCategory": "Modules",
		"readme": "none"
	}
}
