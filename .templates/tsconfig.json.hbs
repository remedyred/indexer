{
{{#if typescript}}
		"extends": "../tsconfig.json",
{{/if}}
	"include": [
			{{#if typescript}}ts{{else}}js{{/if}}
	],
	"compilerOptions": {
		{{#if typescript}}
			"allowJs": true,
			"emitDeclarationOnly": true,
		{{/if}}
		"declaration": true,
		"declarationMap": true,
		"removeComments": true,
		"target": "es2018",
		"moduleResolution": "node",
		"newLine": "lf",
		"module": "commonjs",
		"downlevelIteration": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"esModuleInterop": true
	}
}
