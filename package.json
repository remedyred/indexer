{
	"name": "root",
	"version": "0.0.2",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "pnpm run -r build",
		"clean": "pnpm run clean:builds && pnpm run clean:modules && pnpm run clean:lock && pnpm run clean:logs",
		"clean:builds": "pnpm run -r --parallel clean",
		"clean:docs": "shx rm -rf **/docs **/DOCS.md **/DOC.md",
		"clean:lock": "shx rm -f *.lock *-lock.yaml *-lock.json",
		"clean:logs": "shx rm -rf **/*.log",
		"clean:modules": "shx rm -rf **/node_modules **/.yalc **/yalc.lock",
		"depcheck": "pnpm run -r depcheck",
		"dev": "pnpm run -r dev",
		"fix": "eslint **/*.{js,ts,vue,json} --cache --color --fix",
		"lint": "eslint **/*.{js,ts,vue,json} --cache --color",
		"prepare": "husky install",
		"prod": "pnpm run -r prod",
		"prerelease": "pnpm run prod && pnpm run fix && pnpm run depcheck",
		"release": "lerna publish",
		"test": "pnpm jest",
		"update": "ncu --upgrade --target minor --deep",
		"upgrade": "ncu --upgrade --target newest --filter @snickbit/*,@remedyred/* --deep",
		"uplist": "ncu --target minor --deep"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "^1.4.0",
		"@types/jest": "^27.5.2",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"depcheck": "^1.4.3",
		"esbuild": "^0.14.42",
		"eslint": "^8.16.0",
		"eslint-plugin-beautiful-sort": "^2.0.3",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-json-files": "^1.3.0",
		"eslint-plugin-sort-class-members": "^1.14.1",
		"execa": "^6.1.0",
		"fast-glob": "^3.2.11",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"plop": "^3.1.0",
		"shx": "^0.3.4",
		"sort-package-json": "^1.57.0",
		"sync-monorepo-packages": "^0.3.5",
		"ts-jest": "^27.1.5",
		"typescript": "^4.7.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"publishConfig": {
		"access": "public"
	}
}
