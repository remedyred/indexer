{
	"name": "@snickbit/indexer",
	"version": "2.8.3",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"indexer": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"schema": "typescript-json-schema tsconfig.json GenerateConfig -o indexer.schema.json",
		"start": "ts-node ./src/cli.ts",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.25",
		"@snickbit/node-utilities": "4.7.5",
		"@snickbit/out": "2.1.2",
		"@snickbit/utilities": "3.9.4",
		"chokidar": "^3.5.3",
		"fast-glob": "3.2.12",
		"lilconfig": "2.1.0",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.3",
		"@snickbit/semantic-release": "1.6.6",
		"@types/node": "20.3.1",
		"eslint": "8.43.0",
		"semantic-release": "21.0.5",
		"shx": "0.3.4",
		"ts-node": "10.9.1",
		"tsup": "7.1.0",
		"typescript": "5.0.4",
		"typescript-json-schema": "0.58.1"
	},
	"engines": {
		"node": ">= 14"
	}
}
