{
	"name": "@snickbit/indexer",
	"version": "2.5.4",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"bin": {
		"indexer": "./bin/indexer"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/indexer src/index.ts --target=node12 --platform=node --external:shelljs",
		"build:meta": "npm run build --metafile",
		"clean": "shx rm -rf ./bin",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"start": "node bin/indexer",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "^2.0.0",
		"@snickbit/node-utilities": "^4.3.16",
		"@snickbit/out": "^2.0.35",
		"@snickbit/utilities": "^3.1.0",
		"fast-glob": "^3.2.11",
		"lilconfig": "^2.0.5",
		"picomatch": "^2.3.1"
	},
	"devDependencies": {
		"@types/node": "^17.0.42",
		"esbuild": "^0.14.43",
		"shx": "^0.3.4",
		"typescript": "^4.7.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
