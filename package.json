{
	"name": "@snickbit/indexer",
	"version": "2.9.0",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"exports": {
		".": "./dist/index.js",
		"./esbuild": "./dist/esbuild.js"
	},
	"types": "./dist/index.d.ts",
	"bin": {
		"indexer": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"schema": "typescript-json-schema tsconfig.schema.json GenerateConfig -o indexer.schema.json",
		"start": "tsx ./src/cli.ts",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/node-cli": "3.0.27",
		"@snickbit/node-utilities": "4.7.8",
		"@snickbit/out": "2.1.4",
		"@snickbit/utilities": "3.11.1",
		"chokidar": "^3.5.3",
		"esbuild": "0.18.13",
		"fast-glob": "3.3.0",
		"lilconfig": "2.1.0",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.5.3",
		"@snickbit/semantic-release": "1.6.6",
		"@types/node": "20.3.1",
		"eslint": "8.45.0",
		"semantic-release": "21.0.7",
		"tsup": "7.1.0",
		"tsx": "3.12.7",
		"typescript": "5.1.6",
		"typescript-json-schema": "0.59.0"
	},
	"engines": {
		"node": ">= 14"
	}
}
