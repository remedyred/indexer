{
	"name": "@snickbit/indexer",
	"version": "2.5.27",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"bin": {
		"indexer": "./bin/indexer"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "pnpm run bundle --minify",
		"bundle": "esbuild --bundle --outfile=bin/indexer src/index.ts --target=node12 --platform=node --external:shelljs",
		"clean": "shx rm -rf ./bin",
		"dev": "pnpm run bundle --sourcemap",
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"lint": "tsc --noEmit && eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"start": "node bin/indexer",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "2.0.2",
		"@snickbit/node-utilities": "4.4.16",
		"@snickbit/out": "2.0.48",
		"@snickbit/utilities": "3.4.15",
		"fast-glob": "3.2.12",
		"lilconfig": "2.0.6",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.8",
		"@snickbit/semantic-release": "^1.6.0",
		"@types/jest": "29.2.0",
		"@types/node": "17.0.45",
		"esbuild": "0.15.12",
		"eslint": "8.26.0",
		"jest": "29.2.1",
		"semantic-release": "^19.0.5",
		"shx": "0.3.4",
		"ts-jest": "29.0.3",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
