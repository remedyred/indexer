{
	"name": "@snickbit/indexer",
	"version": "2.5.7",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"bin": {
		"indexer": "./bin/indexer"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "esbuild --bundle --outfile=bin/indexer src/index.ts --target=node12 --platform=node --external:shelljs",
		"build:meta": "pnpm run build --metafile",
		"clean": "shx rm -rf ./bin",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"start": "node bin/indexer",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "2.0.2",
		"@snickbit/node-utilities": "4.4.3",
		"@snickbit/out": "2.0.37",
		"@snickbit/utilities": "3.2.1",
		"fast-glob": "3.2.11",
		"lilconfig": "2.0.6",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "0.0.10",
		"@types/node": "17.0.45",
		"@typescript-eslint/eslint-plugin": "5.34.0",
		"esbuild": "0.15.4",
		"eslint": "8.21.0",
		"eslint-plugin-beautiful-sort": "2.0.3",
		"eslint-plugin-json-files": "1.3.0",
		"eslint-plugin-sort-class-members": "1.14.1",
		"shx": "0.3.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
