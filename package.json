{
	"name": "@snickbit/indexer",
	"version": "2.5.27",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"bin": {
		"indexer": "./dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"check": "pnpm run lint && pnpm run typecheck",
		"clean": "shx rm -rf ./dist",
		"dev": "tsup --watch",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"lint:fix": "pnpm run lint --fix",
		"start": "ts-node ./src/cli.ts",
		"typecheck": "tsc --noEmit"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/node-cli": "2.0.2",
		"@snickbit/node-utilities": "4.4.16",
		"@snickbit/out": "2.0.48",
		"@snickbit/state": "^1.0.1",
		"@snickbit/utilities": "3.4.15",
		"chokidar": "^3.5.3",
		"fast-glob": "3.2.12",
		"lilconfig": "2.0.6",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.8",
		"@snickbit/semantic-release": "1.6.3",
		"@types/node": "17.0.45",
		"eslint": "8.26.0",
		"semantic-release": "19.0.5",
		"shx": "0.3.4",
		"ts-node": "10.9.1",
		"tsup": "6.3.0",
		"typescript": "4.8.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts",
			"src/cli.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"cjs",
			"esm"
		]
	}
}
