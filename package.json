{
	"name": "@snickbit/indexer",
	"version": "2.5.25",
	"description": "Simple cli tool to generate index files for almost any project.",
	"license": "MIT",
	"bin": {
		"indexer": "./bin/indexer"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"build": "pnpm run bundle --minify",
		"bundle": "esbuild --bundle --outfile=bin/indexer src/index.ts --target=node12 --platform=node --external:shelljs",
		"clean": "shx rm -rf ./bin",
		"dev": "pnpm run bundle --sourcemap",
		"start": "node bin/indexer",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/node-cli": "2.0.2",
		"@snickbit/node-utilities": "4.4.9",
		"@snickbit/out": "2.0.44",
		"@snickbit/utilities": "3.4.2",
		"fast-glob": "3.2.11",
		"lilconfig": "2.0.6",
		"picomatch": "2.3.1"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.6",
		"@snickbit/semantic-release": "^1.5.3",
		"@types/jest": "28.1.8",
		"@types/node": "17.0.45",
		"esbuild": "0.15.7",
		"eslint": "8.24.0",
		"jest": "28.1.3",
		"semantic-release": "^19.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"typescript": "4.8.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"preferGlobal": true
}
