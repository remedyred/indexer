{
	"name": "root",
	"version": "0.0.2",
	"private": true,
	"engines": {
		"node": ">= 12"
	},
	"publishConfig": {
		"access": "public"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"purge": "npm run clean:builds && npm run clean:modules && npm run clean:lock && npm run clean:logs",
		"clean:cache": "shx rm -rf **/.turbo",
		"clean:builds": "turbo run clean",
		"clean:docs": "shx rm -rf **/docs **/DOCS.md **/DOC.md",
		"clean:modules": "shx rm -rf **/node_modules **/yarn-error.log **/lerna-debug.log",
		"clean:lock": "shx rm -f yarn.lock yarn-error.log pnpm-lock.yaml pnpm-error.log pnpm-debug.log",
		"clean:logs": "shx rm -rf **/yarn-error.log npm run clean:cache",
		"build": "turbo run build",
		"prod": "turbo run prod",
		"docs": "turbo run docs",
		"test": "turbo run test -- --passWithNoTests",
		"depcheck": "turbo run depcheck",
		"lint": "eslint . --cache --color",
		"fix": "npm run lint -- --fix",
		"prerelease": "npm run test && npm run docs && npm run fix  && npm depcheck",
		"release": "lerna publish",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@changesets/changelog-git": "^0.1.11",
		"@changesets/cli": "^2.22.0",
		"@lerna-lite/cli": "^1.0.5",
		"@types/jest": "^27.4.1",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"depcheck": "^1.4.3",
		"esbuild": "^0.14.38",
		"eslint": "^8.14.0",
		"eslint-plugin-editorconfig": "^3.2.0",
		"eslint-plugin-markdown": "^2.2.1",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"ts-jest": "^27.1.4",
		"turbo": "^1.2.5",
		"typescript": "^4.6.3",
		"yalc": "^1.0.0-pre.53"
	},
	"jest": {
		"verbose": true,
		"preset": "ts-jest",
		"testEnvironment": "node",
		"projects": [
			"packages/*"
		]
	}
}
